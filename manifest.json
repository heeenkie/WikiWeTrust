{
	"name": "Wiki We Trust",
	"description": "Just trust wiki and you will see",
	"version": "1.0",
	"manifest_version": 2,

	"browser_action": {
		"default_icon": "pic.png",
		"default_popup": "popup.html",
		"default_title": "WikiWeTrust"
	},

	"permissions": [
    "tabs",
		"activeTab",
		"<all_urls>",
		"https://en.wikipedia.org/"
	],

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}],

	"background": {
	  "scripts": ["background.js"],
	  "persistent": false
	}


}
